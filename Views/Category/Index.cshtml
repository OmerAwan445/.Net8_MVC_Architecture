@using Bulkyweb.Models
@model List<Category>

    @if(TempData["success"] != null){
        <h1>@TempData["success"]</h1>
    }
<div>
    <div class="d-flex justify-content-between align-items-center">
        <h1>Category Items</h1>
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
    </div>

    <table class="mt-4 table table-bordered table-striped">
        <thead>
        <tr>
           @foreach( var obj in typeof(Category).GetProperties())
           {
           <th>
               @obj.Name
           </th>
           }
        </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    @foreach (var property in typeof(Category).GetProperties())
                    {
                        <td>
                            @property.GetValue(obj, null)
                        </td>
                    }
                    <td>
                        <div>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id=@obj.Id class="btn btn-primary">Edit</a>
                            <button class="btn btn-danger">Delete</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>